<body>
  <div><a id="logo" href="/">Chitter</div>
  <a href="/peeps/new">Peep!</a>
  <% if current_user %>
    Welcome, <%= current_user.name %>
     <form method="post" action="/sessions">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Log out">
    </form>
  <% else %>
    <a href='/users/new' id='sign-up' class='button'>Sign up</a>
    <a href='/sessions/new' id='log-in' class='button'>Log in</a>
  <% end %>

  <% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, there were the following problems with the form:
    <ul id="errors">
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <% if flash[:notice] %>
      <div id="notice">
        <%= flash[:notice] %>
      </div>
  <% end %>

  <%= yield %>

</body>